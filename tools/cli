                    print(f"ğŸ” Tracing references for {target_id}:")
                    for ref in references:
                        print(f"  ğŸ“„ {ref}")
                else:
                    print(f"âŒ No references found for '{target_id}'")
            else:
                print("âŒ Usage: ./cli id-trace <id>")
                print("ğŸ’¡ Example: ./cli id-trace T2-CONTROL-013")
        
        elif command == "id-validate":
            print("ğŸ” Validating IDs with fix suggestions...")
            analyzer = DocumentationAnalyzer()
            suggestions = analyzer.suggest_id_fixes()
