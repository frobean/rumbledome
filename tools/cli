                print("ğŸ’¡ Example: ./cli generate-golden T2-CONTROL-013")
        
        elif command == "validate-critical":
            if len(sys.argv) > 2:
                target_id = sys.argv[2]
                print(f"ğŸ” Validating critical algorithm {target_id}...")
                analyzer = DocumentationAnalyzer()
